    "@types/chalk": "^0.4.31",
    "@types/lodash": "^4.14.50",
    "@types/node": "^7.0.4",
    "chalk": "^1.1.3",
    "lodash": "^4.17.4",
    "pegjs": "^0.10.0",
    "typescript": "^2.1.5"
  }
}
